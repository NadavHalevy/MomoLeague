<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomeActivity"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/firstLine"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="MOMO LEAGUE"
        android:textSize="50dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/tableBut"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="TABLE"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="120dp"
        android:layout_marginRight="572dp"
        android:visibility="visible"
        android:backgroundTint="@android:color/white"
        android:paddingLeft="10dp"
        />

    <Button
        android:id="@+id/lastGame"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="LAST GAME"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="170dp"
        android:layout_marginRight="572dp"
        android:visibility="visible"
        android:outlineSpotShadowColor="#00000000"
        android:backgroundTint="@android:color/white"
        />

    <Button
        android:id="@+id/weekGuess"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="WEEK GUESS"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="220dp"
        android:layout_marginRight="572dp"
        android:visibility="visible"
        android:backgroundTint="@android:color/white"
        />

    <Button
        android:id="@+id/listGames"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="LIST GAMES"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="270dp"
        android:layout_marginRight="572dp"
        android:visibility="visible"
        android:backgroundTint="@android:color/white"
        />


    <Button
        android:id="@+id/makeList"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="MAKE A LIST"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="320dp"
        android:layout_marginRight="572dp"
        android:visibility="visible"
        android:backgroundTint="@android:color/white"
        />

    <Button
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log out"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="562dp"
        android:visibility="visible"
        android:backgroundTint="@android:color/white"
        />

</RelativeLayout>