<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomeActivity"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/firstLine"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="MOMO LEAGUE"
        android:textSize="50dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
    <WebView
        android:id="@+id/home_webview"
        android:layout_below="@id/firstLine"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/tableBut"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="TABLE"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="140dp"
        android:layout_marginRight="572dp"
        android:visibility="visible"
        android:backgroundTint="@android:color/white"
        android:paddingLeft="10dp"
        />

    <Button
        android:id="@+id/weekGuess"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="WEEK GUESS"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="190dp"
        android:layout_marginRight="572dp"
        android:visibility="visible"
        android:backgroundTint="@android:color/white"
        />

    <Button
        android:id="@+id/listGames"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="LIST GAMES"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="240dp"
        android:layout_marginRight="572dp"
        android:visibility="visible"
        android:backgroundTint="@android:color/white"
        />

    <Button
        android:id="@+id/logOut"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="log out"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="290dp"
        android:layout_marginRight="572dp"
        android:visibility="visible"
        android:backgroundTint="@android:color/white"
        />

    <LinearLayout
        android:id="@+id/admin_buttons"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:orientation="vertical">
    <Button
        android:id="@+id/makeList"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="MAKE A LIST"
        android:textStyle="bold"
        android:textColor="#000000"
        android:visibility="visible"
        android:backgroundTint="@android:color/white"
        />

        <Button
            android:id="@+id/updateGuesses"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="UPDATE GUESS"
            android:textStyle="bold"
            android:textColor="#000000"
            android:visibility="visible"
            android:backgroundTint="@android:color/white"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="562dp" />

</RelativeLayout>