<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choose your guess"
        android:textSize="30sp"/>
    <RadioGroup
        android:id="@+id/guess_dialog_radio_group"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/guess_dialog_radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="1"/>
        <RadioButton
            android:id="@+id/guess_dialog_radio_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="X"/>
        <RadioButton
            android:id="@+id/guess_dialog_radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="2"/>
    </RadioGroup>

    <Button
        android:id="@+id/guess_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/guess_dialog_radio_group"
        android:text="OK"/>

</RelativeLayout>